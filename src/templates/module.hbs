<div class="card">
    <div class="card__heading--css"></div>
    <div class="card__heading">
        
        <h2 class="card__heading__text">{{name}}</h2>
    </div>
    
    <div class="card__img-container">
        <img class="card__img-container__img" src="{{img}}" alt="Lesnaya opushka">
    </div>
    <div class="card__info">
        <article class="card__info__text">
            <span class="card__info__text__span">{{textSpan}}</span>{{shortDescr}}
        </article>
        <div class="card__info__bottom">
            <p class="card__info__bottom__price"> &#x20b4 {{price}}</p>
            <button class="card__info__bottom__btn">читать далее</button>
            <div class="js-block-info">{{category}}</div>
            <div class="js-block-id">{{id}}</div>
        </div>
    </div>
    
</div>
